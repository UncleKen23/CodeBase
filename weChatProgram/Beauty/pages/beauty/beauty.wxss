/* pages/beauty/beauty.wxss */
@import "/pages/template/question.wxss";

page{
  background: #f5f5f4;
}
.banner{
  width: 100%;
  height: 518rpx;
  position: relative;
}
.banner .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  /* opacity: .6; */
}

.user{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.user .headPortrait{
  width: 150rpx;
  height: 150rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-top: 120rpx;
  overflow: hidden;
}
.user .headPortrait image{
  width: 100%;
  height: 100%;
}
.user .name{
  font-size: 32rpx;
  color: #fff;
  padding:30rpx 0; 
}

.fans{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.every{
  width: 1rpx;
  height: 40rpx;
  background: #fff;
  margin: 0 40rpx;
}
.fans-li{
  color: #fff;
  font-size: 28rpx;
}


/* 搜索栏 */
.search{
  width: 100%;
  height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  background: #95dcba;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  position: fixed;
  top:0;
  left: 0;
  z-index: 1;
}
.search-input{
  width: 85%;
  /* height: 60rpx; */
  margin: 0 auto;
  background: #fff;
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 0;
  border-radius: 30rpx
}
.search-cancel{
  width: 10%;
  background: red;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 5rpx 0;
}