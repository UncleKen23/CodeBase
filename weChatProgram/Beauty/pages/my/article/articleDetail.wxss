/* pages/my/article/articleDetail.wxss */
page{
  background: #d5f1e4;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
}
.bg image{
  width: inherit;
  height: inherit;
}
.article{
  width: 100%;
  /* min-height: 1100rpx; */
  margin: 20rpx 0;
  padding: 20rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, .7)
}
.title{
  font-size: 42rpx;
  font-weight: bold;
  text-align: center;
}

.content{
  font-size: 34rpx;
  line-height: 50rpx;
  margin-top: 50rpx;
  text-indent: 2rem;
}
.image-group{
  width: 100%;
  /* height: 300rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.image-group image{
  padding: 20rpx;
}