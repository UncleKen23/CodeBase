/* pages/my/article/articleList.wxss */
page{
  background: #d5f1e4;
}
.ul{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.li{
  width: 100%;
  border-radius: 8rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.article-title{
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  font-size: 42rpx;
  color: #111;
  font-weight: bold;
  padding-left: 20rpx;
}
.article-info{
  padding: 20rpx;
  font-size: 34rpx;
  color: #999;
}

.read{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  color: #d5f1e4;
  border: 1rpx solid #d5f1e4;
}

.btn{
  width: 100%;
  height: 110rpx;
  background: #000;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
}