/* pages/my/article/editeArticle.wxss */

page{
  background: #f4fcf8;
}
.form{
  width: 100%;
  height: auto;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.title{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.title input[type="text"]{
  flex: 1;
  height: 100rpx;
  font-size: 36rpx;
}
.content{
  width: 100%;
  height: 550rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.content textarea{
  flex: 1;
  height: 530rpx;
  font-size: 36rpx;
}

.uploadImg{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
}
.uploadImg image{
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.submit{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-radius: 0;
  background: #96ddbb;
  color: #fff;
}