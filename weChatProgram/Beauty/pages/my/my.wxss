/* pages/my/my.wxss */
page{
  background: #f5f5f4;
}
.banner{
  width: 100%;
  height: 500rpx;
  position: relative;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.banner-content{
  width: 100%;
  justify-content: space-around;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 100rpx 0 0; 
  text-align: center;
}
.left{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 38rpx;
  color: #fff;
}
.user-image{
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 5rpx solid #fff;
}
.user-image image:first-child{
  width: 100%;
  height: 100%;
}
.user-image image:last-child{
  width: 45rpx;
  height: 46rpx;
  position: absolute;
  right: 0;
  bottom: 85rpx;
  z-index: 1;
}

.right{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.every{
  width: 3rpx;
  height: 40rpx;
  background: #fff;
  margin: 0 20rpx;
}
.user-name{
  padding: 10rpx 0;
}
.user-signature{
  width: 80%;
  padding-top: 20rpx;
  padding-left: 40rpx;
  font-size: 34rpx;
  color: #fff; 
}


.tool{
  width: 100%;
  height: 250rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.tool-list{
  flex: 1;
}
.tool-list image,.tool-list text{
  display: block;
  margin: 0 auto;
  text-align: center;
  
}
.tool-list text{
  font-size: 34rpx;
  padding: 10rpx 0;
}